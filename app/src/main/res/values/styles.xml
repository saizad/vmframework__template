<resources>

    <style name="AppTheme" parent="Theme.MaterialComponents.Light.AppTheme">
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="FullScreen.Launch">
        <item name="android:windowBackground">@drawable/launch_screen</item>
    </style>

    <style name="AuthTheme" parent="FullScreen.AppLaunch">
        <item name="navGraph">@navigation/auth_nav</item>
    </style>

    <style name="MainTheme" parent="AppTheme.NoActionBar">
        <item name="navGraph">@navigation/main_nav</item>
    </style>

    <style name="MaterialRoundedShape" parent="AppTheme">
        <item name="cornerFamily">rounded</item>
        <item name="cornerSize">@dimen/space_1x</item>
    </style>

    <style name="HintTextAppearance">
        <item name="android:textSize">@dimen/space_0_2x</item>
    </style>

    <style name="TextInputLayoutStyle" parent="@style/Widget.MaterialComponents.TextInputLayout.OutlinedBox">
        <item name="endIconMode">clear_text</item>
        <item name="errorIconDrawable">@null</item>
        <item name="errorEnabled">true</item>
        <item name="hintTextAppearance">@style/HintTextAppearance</item>
    </style>

    <style name="TextInputEditTextStyle">
        <item name="android:textColorHint">@color/grey_200</item>
        <item name="android:textSize">14sp</item>
        <item name="android:maxLines">1</item>
        <item name="android:minLines">1</item>
        <item name="android:padding">@dimen/space_2x</item>
        <item name="android:textColor">@color/grey_700</item>
        <item name="android:inputType">text|textNoSuggestions</item>
    </style>

    <style name="TextInputTheme">
        <item name="textInputLayoutStyle">@style/TextInputLayoutStyle</item>
        <item name="textInputEditTextStyle">@style/TextInputEditTextStyle</item>
    </style>

    <style name="EmailTextInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="android:hint">Email Address</item>
    </style>

    <style name="EmailTextInputEditTextStyle" parent="TextInputEditTextStyle">
        <item name="android:inputType">textEmailAddress</item>
    </style>

    <style name="EmailTheme" parent="TextInputTheme">
        <item name="textInputLayoutStyle">@style/EmailTextInputLayoutStyle</item>
        <item name="textInputEditTextStyle">@style/EmailTextInputEditTextStyle</item>
    </style>

    <style name="PasswordTextInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="endIconMode">password_toggle</item>
        <item name="android:hint">Password</item>
    </style>

    <style name="PasswordEditTextStyle" parent="TextInputEditTextStyle">
        <item name="android:inputType">textPassword</item>
    </style>

    <style name="PasswordTheme" parent="TextInputTheme">
        <item name="textInputLayoutStyle">@style/PasswordTextInputLayoutStyle</item>
        <item name="textInputEditTextStyle">@style/PasswordEditTextStyle</item>
    </style>

    <style name="FullNameInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="android:hint">Full Name</item>
    </style>

    <style name="FullNameInputEditTextStyle" parent="TextInputEditTextStyle">
        <item name="android:inputType">textPersonName</item>
    </style>

    <style name="FullNameTheme" parent="TextInputTheme">
        <item name="textInputLayoutStyle">@style/FullNameInputLayoutStyle</item>
        <item name="textInputEditTextStyle">@style/FullNameInputEditTextStyle</item>
    </style>

    <style name="JobInputLayoutStyle" parent="TextInputLayoutStyle">
        <item name="android:hint">Job</item>
    </style>

    <style name="JobInputEditTextStyle" parent="TextInputEditTextStyle">
        <item name="android:inputType">textCapWords</item>
    </style>

    <style name="JobTheme" parent="TextInputTheme">
        <item name="textInputLayoutStyle">@style/JobInputLayoutStyle</item>
        <item name="textInputEditTextStyle">@style/JobInputEditTextStyle</item>
    </style>

    <style name="Space0XCornerRadius" parent="MainTheme">
        <item name="cornerRadius">@null</item>
        <item name="roundedCornerStrokeWidth">0dp</item>
        <item name="roundedCornerStrokeColor">@color/strokeColor</item>
        <item name="roundedCornerColor">@color/strokeColor</item>
        <item name="topRightCornerRadius">@null</item>
        <item name="topLeftCornerRadius">@null</item>
        <item name="bottomRightCornerRadius">@null</item>
        <item name="bottomLeftCornerRadius">@null</item>
    </style>

    <style name="Space2XCornerRadius" parent="Space0XCornerRadius">
        <item name="cornerRadius">@dimen/space_2x</item>
    </style>

    <style name="Space_0_2XCornerRadius" parent="Space0XCornerRadius">
        <item name="cornerRadius">@dimen/space_0_2x</item>
    </style>


    <style name="Space1XCornerRadius" parent="Space0XCornerRadius">
        <item name="cornerRadius">@dimen/space_1x</item>
    </style>

</resources>
